{
    "compilerOptions": {
    "baseUrl": ".",
        "paths": {
        "@/*": ["resources/js/*"]
    },
    "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve"
},
    "include": [
    "resources/js/**/*",
    "resources/views/**/*"
],
    "exclude": [
    "node_modules",
    "public",
    "vendor"
]
}
